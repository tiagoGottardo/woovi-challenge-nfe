{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@repo/nfe/*": [
        "./apps/nfe/src/*"
      ],
      "@repo/server/*": [
        "./apps/server/src/*"
      ]
    }
  }
}
